<script>
import { createPage } from '@mpxjs/core'
import { customerApi } from '../../api/common.js'
import { useBasicDataStore } from '@/store/base'
import { storeToRefs } from '@mpxjs/pinia'

createPage({
  setup() {
    const basicData = storeToRefs(useBasicDataStore())
    console.log({ basicData })
    return {
      ...basicData
    }
  },
  async getCustomerInfo() {
    console.log(this.data)

    if (this.data.openid) return
    const data = await wx.login()
    console.log({ data })
    if (data.errMsg !== 'login:ok') return
    const res = await customerApi.findForWxCode({ code: data.code })
    console.log({ res })
    this.setOpenid(res.openid)
    if (res.customer) this.setCustomer(res.customer)
  },
  async getUserInfo() {
    const data = await wx.getUserProfile({ desc: '创建会员' })
    if (!data.errMsg.endsWith('ok')) return
    const userInfo = data.userInfo
    console.log({ userInfo })
  },
  navToConsumeBill() {
    if (!this.data.openid) return this.getCustomerInfo()
    wx.navigateTo({
      url: '/mine/consume-bill/index'
    })
  },
  navToQueueBill() {
    wx.navigateTo({
      url: '/mine/queue-bill/index'
    })
  },
  navToReserveBill() {
    wx.navigateTo({
      url: '/mine/reserve-bill/index'
    })
  },
  navToCoupon() {
    wx.navigateTo({
      url: '/mine/coupon/index'
    })
  },
  navToAddress() {
    wx.navigateTo({
      url: '/mine/address/index'
    })
  },
  navToOrder({ mark }) {
    const { type } = mark
    console.log({ type })
    wx.navigateTo({
      url: '/mine/order/index?type=' + type
    })
  },
  onLoad() {
    this.setTabBar()
    // this.getCustomerInfo()
  },
  navBack() {
    wx.navigateBack()
  },
  setTabBar() {
    if (typeof this.getTabBar === 'function') {
      this.getTabBar((tabBar) => {
        tabBar.setData({
          active: 'mine'
        })
      })
    }
  }
})
</script>

