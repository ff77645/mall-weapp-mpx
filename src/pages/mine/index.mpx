      </view>
    </view>

    <!-- 其他 -->
    <van-cell-group border="{{false}}" inset>
      <van-cell title="地址管理" is-link bind:click="navToAddress" >
        <van-icon slot="icon" name="location" color="#2f3542" custom-style="margin-right:3px;" />
